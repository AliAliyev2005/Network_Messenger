<Window x:Class="Messenger.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger.Views"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400">
    <Grid>
        <Grid Margin="50,25,50,150">
            <Label 
                VerticalContentAlignment="Center"
                FontWeight="DemiBold"
                FontSize="20"
                Content="Login :"
                Margin="10,10,170,10"/>
            <TextBox  
                Margin="120,10,10,10"
                VerticalContentAlignment="Center"
                FontWeight="DemiBold"
                FontSize="16"/>
        </Grid>

        <Grid Margin="50,100,50,75">
            <Label 
                VerticalContentAlignment="Center"
                FontWeight="DemiBold"
                FontSize="20"
                Content="Password :"
                Margin="10,10,170,10"/>
            <PasswordBox 
                Margin="120,10,10,10"
                VerticalContentAlignment="Center"
                FontWeight="DemiBold"
                FontSize="16"/>
        </Grid>

        <Button Content="Login" Margin="50,175,50,25"/>
    </Grid>
</Window>
